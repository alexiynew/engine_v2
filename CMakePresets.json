{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default-options",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "BUILD_PRESET_NAME": "${presetName}",
                "ENABLE_TESTING": "ON",
                "ENABLE_ASAN": "OFF",
                "ENABLE_CPPCHECK": "ON",
                "ENABLE_CLANG_TIDY": "OFF",
                "BUILD_DOCUMENTATION": "OFF",
                "USE_STUB_BACKEND": "OFF",
                "USE_STUB_RENDERER": "OFF"
            }
        },
        {
            "name": "ninja-multi",
            "inherits": "default-options",
            "displayName": "Ninja Multi-Config",
            "description": "Default build using Ninja Multi-Config generator",
            "generator": "Ninja Multi-Config"
        },
        {
            "name": "windows-only",
            "inherits": "default-options",
            "displayName": "Windows Visual Studio",
            "description": "This build is only available on Windows",
            "generator": "Visual Studio 17 2022",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "Ninja",
            "inherits": "default-options",
            "displayName": "Ninja",
            "description": "Default build using Ninja generator",
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ninja-multi-debug",
            "configurePreset": "ninja-multi",
            "displayName": "Ninja multiconfig Debug",
            "jobs": 12,
            "configuration": "Debug"
        },
        {
            "name": "ninja-multi-release",
            "configurePreset": "ninja-multi",
            "displayName": "Ninja multiconfig Release",
            "jobs": 12,
            "configuration": "Release"
        },
        {
            "name": "vs-debug",
            "configurePreset": "windows-only",
            "displayName": "Windows Visual Studio Debug",
            "jobs": 12,
            "configuration": "Debug",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "vs-release",
            "configurePreset": "windows-only",
            "displayName": "Windows Visual Studio Release",
            "jobs": 12,
            "configuration": "Release",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "ninja-debug",
            "configurePreset": "Ninja",
            "displayName": "Ninja Debug",
            "jobs": 12,
            "configuration": "Debug"
        },
        {
            "name": "ninja-gcc-release",
            "displayName": "Ninja Gcc Release",
            "configurePreset": "ninja-gcc-release",
            "inherits": [
                "default-options"
            ]
        },
        {
            "name": "ninja-clang-debug",
            "displayName": "Ninja Clang Debug",
            "configurePreset": "ninja-clang-debug",
            "inherits": [
                "default-options"
            ]
        },
        {
            "name": "ninja-clang-release",
            "displayName": "Ninja Clang Release",
            "configurePreset": "ninja-clang-release",
            "inherits": [
                "default-options"
            ]
        },
        {
            "name": "ninja-multi-gcc-debug",
            "displayName": "Ninja Multi-Config Gcc Debug",
            "configurePreset": "ninja-multi-gcc",
            "configuration": "Debug",
            "inherits": [
                "default-options"
            ]
        },
        {
            "name": "ninja-multi-gcc-release",
            "displayName": "Ninja Multi-Config Gcc Release",
            "configurePreset": "ninja-multi-gcc",
            "configuration": "Release",
            "inherits": [
                "default-options"
            ]
        },
        {
            "name": "ninja-multi-clang-debug",
            "displayName": "Ninja Multi-Config Clang Debug",
            "configurePreset": "ninja-multi-clang",
            "configuration": "Debug",
            "inherits": [
                "default-options"
            ]
        },
        {
            "name": "ninja-multi-clang-release",
            "displayName": "Ninja Multi-Config Clang Release",
            "configurePreset": "ninja-multi-clang",
            "configuration": "Release",
            "inherits": [
                "default-options"
            ]
        }
    ]
}